<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/edit_text_rounded_corner"
    android:backgroundTint="@color/my_secondary"
    android:layout_margin="10dp"
    android:elevation="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic_image_view"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_margin="10dp"
        android:src="@drawable/peerpal_icon" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:background="@color/my_secondary"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/last_message_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textColor="@color/my_primary"
                tools:text="10:00" />
        </RelativeLayout>

        <TextView
            android:id="@+id/user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="User name" />

        <TextView
            android:id="@+id/last_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Recent Message" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/pinChatButton"
        android:layout_width="37dp"
        android:layout_height="31dp"
        android:background="@color/Red"
        android:src="@drawable/baseline_push_pin_24" />

    <ImageButton
        android:id="@+id/deleteConnectionButton"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:layout_weight="1"
        android:backgroundTint="#00FF0000"
        app:srcCompat="@drawable/icon_remove" />

</LinearLayout>